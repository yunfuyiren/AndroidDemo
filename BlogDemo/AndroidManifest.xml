<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blogdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.example.blogdemo.MainActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
       <activity
            android:theme="@style/ContentOverlay"
            android:name="com.example.blogdemo.BlogActivity"
            android:label="@string/main_home"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
         <activity
            android:theme="@style/ContentOverlay"
            android:name="com.example.blogdemo.MoreActivity"
            android:label="@string/main_more"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
         <activity
            android:theme="@style/ContentOverlay"
            android:name="com.example.blogdemo.NewsActivity"
            android:label="@string/main_news"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
         <activity
            android:theme="@style/ContentOverlay"
            android:name="com.example.blogdemo.SearchActivity"
            android:label="@string/main_search" 
            android:configChanges="orientation|keyboardHidden">
        </activity>
         <activity
            android:theme="@style/ContentOverlay"
            android:name="com.example.blogdemo.MyRssActivity"
            android:label="@string/main_rss"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
    </application>

</manifest>
